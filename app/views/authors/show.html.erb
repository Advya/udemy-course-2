<h1 class="text-center mt-4"><%= @author.authorname %>'s profile</h1>

<%= gravatar_for @author, size: 200 %>

<div class="text-center mt-4">
	<% if logged_in? && @author == current_author %>
		<%= link_to "Edit your profile", edit_author_path(@author), class: "btn btn-outline-info" %>
	<% end %>
</div>

<h3 class="text-center mt-4">Articles</h3>

<%= render 'articles/article' %>